{
  "manifest_version": 2,

  "name": "Cr Encoder",
  "description": "This extension encodes/decodes strings",
  "version": "0.2",

  "browser_action": {
    "default_icon": "icons/icon128.png",
    "default_popup": "src/popup.html"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "background": {
    "scripts": [
      "src/background.js"
    ]
  },

  "permissions": [
    "contextMenus"
  ]
}
